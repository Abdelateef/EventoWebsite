@page
@model projectf22.Pages.TicketsModel
@{
}
<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Tickets On Sale Now!</h2>
                <span>Check out upcoming and past shows & events and grab your ticket right now.</span>
            </div>
        </div>
    </div>
</div>

<div class="tickets-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
            </div>
            <div class="col-lg-12">
                <div class="heading">
                    <h2>Tickets Page</h2>
                </div>
            </div>
            @for (int i = 0; i < @Model.ListofTickets.Count; i++)
            {

                <div class="col-lg-4">
                    <div class="ticket-item">
                        <div class="thumb">
                            <img src="/Images/@Model.imgs.Rows[i]["EventImages"]" alt="">
                            <div class="price">
                                <span>1 ticket<br>with <em>@Model.ListofTickets[i].TicketPrice</em></span>
                            </div>
                        </div>
                        <div class="down-content">
                            <span>There Are @Model.ListofTickets[i].Availability Tickets Left For This Show</span>
                            <form method="post">

                                <button type="submit" class="bg-dark p-2 text-light" name="index" value="@i">Purchase Tickets</button>
                            </form>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>



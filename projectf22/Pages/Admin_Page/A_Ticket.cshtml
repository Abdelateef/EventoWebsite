@page
@model projectf22.Pages.Admin_Page.A_TicketsModel
@{
    ViewData["Title"] = "Tickets";
}

<style>
    .admin-data-table-heading {
        margin-top: 20px; /* Add margin top for space */
        text-align: center; /* Center the text */
        font-weight: bold; /* Make the text bold */
    }
</style>

<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Tickets</h2>
                <span>Welcome, Admin! Here are the available tickets.</span>
            </div>
        </div>
    </div>
</div>

<div class="shows-events-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="admin-data-table-heading mb-4">Tickets Data Table</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>TicketID</th>
                                    <th>TicketPrice</th>
                                    <th>Availability</th>
                                    <th>TicketType</th>
                                    <th>EventID</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model.TicketsList)
                                {
                                    <tr>
                                        <td>@ticket.TicketID</td>
                                        <td>@ticket.TicketPrice</td>
                                        <td>@(ticket.Availability ? "Available" : "Not Available")</td>
                                        <td>@ticket.TicketType</td>
                                        <td>@ticket.EventID</td>
                                        <td class="text-right">
                                            <a asp-page="/Update/Update_Tickets" asp-route-id="@ticket.TicketID">Update</a>
                                            |
                                            <a asp-page="/Delete/Ticket_Delete" asp-route-id="@ticket.TicketID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-page="/Create/Create_Ticket">Add new Ticket</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

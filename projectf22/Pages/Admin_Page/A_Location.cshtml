@page
@model projectf22.Pages.Admin_Page.A_LocationsModel
@{
    ViewData["Title"] = "Locations";
}

<style>
    .admin-data-table-heading {
        margin-top: 20px; /* Add margin top for space */
        text-align: center; /* Center the text */
        font-weight: bold; /* Make the text bold */
    }
</style>

<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Locations</h2>
                <span>Welcome, Admin! Here are the available locations.</span>
            </div>
        </div>
    </div>
</div>

<div class="shows-events-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="admin-data-table-heading mb-4">Locations Data Table</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>LocationID</th>
                                    <th>LocationName</th>
                                    <th>LocationCapacity</th>
                                    <th>LocationFacilities</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var location in Model.LocationsList)
                                {
                                    <tr>
                                        <td>@location.LocationID</td>
                                        <td>@location.LocationName</td>
                                        <td>@location.LocationCapacity</td>
                                        <td>@location.LocationFacilities</td>
                                        <td class="text-right">
                                        <a asp-page="/Update/Update_Location" asp-route-id="@location.LocationID">Update</a>
                                        |
                                        <a asp-page="/Delete/Location_Delete" asp-route-id="@location.LocationID">Delete</a>
                                       </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-page="/Create/Create_Location">Add new Location</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

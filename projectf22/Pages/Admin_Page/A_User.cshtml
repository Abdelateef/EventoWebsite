@page
@model projectf22.Pages.Admin_Page.A_UserModel
@{
}
<style>
    .admin-data-table-heading {
        margin-top: 20px; /* Add margin top for space */
        text-align: center; /* Center the text */
        font-weight: bold; /* Make the text bold */
    }
</style>

<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Admin</h2>
                <span>Welcome, Admin! Your expertise keeps everything running smoothly.</span>
            </div>
        </div>
    </div>
</div>

<div class="shows-events-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="admin-data-table-heading mb-4">The User Data Table</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>UserID</th>
                                    <th>Username</th>
                                    <th>UserEmail</th>
                                    <th>UserPassword</th>
                                    <th>PromotionID</th>
                                    <th>BookingID</th>
                                    <th>EventID</th>
                                    <th>TicketID</th>
                                    <th>PaymentID</th>
                                    <th>AdminID</th>
                                    <th>Actions</th> <!-- New column for actions -->
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var user in Model.Userlist)
                                {
                                    <tr>
                                        <td>@user.UserID</td>
                                        <td>@user.UserName</td>
                                        <td>@user.UserEmail</td>
                                        <td>@user.UserPassword</td>
                                        <td>@user.PromotionID</td>
                                        <td>@user.BookingID</td>
                                        <td>@user.EventID</td>
                                        <td>@user.TicketID</td>
                                        <td>@user.PaymentID</td>
                                        <td>@user.AdminID</td>
                                        <td class="text-right">
                                            <a asp-page="/Update/Update_User" asp-route-id="@user.UserID">Update</a>
                                            |
                                            <a asp-page="/Delete/User_Delete" asp-route-id="@user.UserID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-page="/Create/Create_User">Add new User</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


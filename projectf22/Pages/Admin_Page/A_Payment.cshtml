@page
@model projectf22.Pages.Admin_Page.A_PaymentsModel
@{
    ViewData["Title"] = "Payments";
}

<style>
    .admin-data-table-heading {
        margin-top: 20px; /* Add margin top for space */
        text-align: center; /* Center the text */
        font-weight: bold; /* Make the text bold */
    }
</style>

<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Payments</h2>
                <span>Welcome, Admin! Here are the recent payments.</span>
            </div>
        </div>
    </div>
</div>

<div class="shows-events-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="admin-data-table-heading mb-4">The Payments Data Table</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>PaymentID</th>
                                    <th>PaymentDate</th>
                                    <th>PaymentAmount</th>
                                    <th>PaymentMethod</th>
                                    <th>EventID</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.PaymentsList)
                                {
                                    <tr>
                                        <td>@payment.PaymentID</td>
                                        <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                                        <td>@payment.PaymentAmount</td>
                                        <td>@payment.PaymentMethod</td>
                                        <td>@payment.EventID</td>
                                        <td class="text-right">
                                            <a asp-page="/Update/Update_Payment" asp-route-id="@payment.PaymentID">Update</a>
@*                                             |
                                            <a asp-page="/Delete/Payment_Delete" asp-route-id="@payment.PaymentID">Delete</a> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-page="/Create/Create_Payment">Add new Payment</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

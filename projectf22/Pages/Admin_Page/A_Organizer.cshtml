@page
@model projectf22.Pages.Admin_Page.A_OrganizerModel
@{
}
<style>
    .admin-data-table-heading {
        margin-top: 20px; /* Add margin top for space */
        text-align: center; /* Center the text */
        font-weight: bold; /* Make the text bold */
    }
</style>

<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Organizer Management</h2>
                <span>Welcome, Admin! Manage organizer data here.</span>
            </div>
        </div>
    </div>
</div>

<div class="shows-events-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="admin-data-table-heading mb-4">The Orangizer Data Table</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>company ID</th>
                                    <th>companyLocation</th>
                                    <th>companyName</th>
                                    <th>companyEmail</th>
                                    <th>personName</th>
                                    <th>personEmail</th>
                                    <th>EventID</th>
                                    <th>Actions</th> <!-- New column for actions -->
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var organizer in @Model.Organizerlist)
                                {
                                    <tr>
                                        <td>@organizer.CID</td>
                                        <td>@organizer.CLocation</td>
                                        <td>@organizer.CName</td>
                                        <td>@organizer.CEmail</td>
                                        <td>@organizer.PName</td>
                                        <td>@organizer.PEmail</td>
                                        <td>@organizer.EventID</td>
                                        <td class="text-right">
                                            <a asp-page="/Update/Update_Organizer" asp-route-id="@organizer.CID">Update</a>
                                            |
                                            <a asp-page="/Delete/organizer_Delete" asp-route-id="@organizer.CID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-page="/Create/Create_Organizer">Add new Orangizer </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


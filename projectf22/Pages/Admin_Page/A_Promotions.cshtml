@page
@model projectf22.Pages.Admin_Page.A_PromotionsModel
@{
}
<style>
    .admin-data-table-heading {
        margin-top: 20px; /* Add margin top for space */
        text-align: center; /* Center the text */
        font-weight: bold; /* Make the text bold */
    }
</style>

<div class="page-heading-shows-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Promotion</h2>
                <span>Welcome, Admin! Here are the recent Promotions.</span>
            </div>
        </div>
    </div>
</div>

<div class="shows-events-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="admin-data-table-heading mb-4">The Admin Data Table</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>PromotionID</th>
                                    <th>PromotionType</th>
                                    <th>DiscountAmount</th>
                                    <th>UsageLimit</th>
                                    <th>ExpirationDate</th>
                                    <th>Actions</th> <!-- New column for actions -->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var promotion in Model.PromotionsList)
                                {
                                    <tr>
                                        <td>@promotion.PromotionID</td>
                                        <td>@promotion.PromotionType</td>
                                        <td>@promotion.DiscountAmount</td>
                                        <td>@promotion.UsageLimit</td>
                                        <td>@promotion.ExpirationDate</td>
                                        <td class="text-right">
                                            <a asp-page="/Update/Update_Promotions" asp-route-id="@promotion.PromotionID">Update</a>
                                            |
                                            <a asp-page="/Delete/Promotions_Delete" asp-route-id="@promotion.PromotionID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-page="/Create/Create_Promotions">Add new Promotion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@page
@model projectf22.Pages.sign_upModel
@{
}
<div class="page-heading-rent-venue">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Join us now!</h2>
                <span>Check out our events, pick your choice and book your ticket.</span>
            </div>
        </div>
    </div>
</div>

<div class="rent-venue-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row" id="tabs">
                    <div class="col-lg-12">
                        <div class="heading-tabs">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="rent-venue-application" >
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="heading-text">
                    <h4>Sign Up</h4>
                </div>
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input  type="text" id="name" placeholder="Your Name*" required="" asp-for="@Model.UsName">
                                    <span asp-validation-for="@Model.UsName" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12 ">
                                <fieldset>
                                    <input  type="text" id="email" placeholder="Your Email*" required="" asp-for="@Model.UsEmail">
                                    <span asp-validation-for="@Model.UsEmail" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input  type="password" id="password" placeholder="Password*" required="" asp-for="@Model.UsPassword">
                                    <span asp-validation-for="@Model.UsPassword" class="text-danger"></span>
                                </fieldset>

                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-dark-button">Create a new account</button>
                                </fieldset>
                            </div>
                        </div>
                    </form> <br />
                    <div class="down-content">
                        <span>Already have an account?</span>
                
                        <div class="main-dark-button">
                            <a href="/Login">Log in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.ModalTitle</h5>

            </div>
            <div class="modal-body">
                @Model.ModalContent
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
        @if (Model.ShowResult)
        {
                <text>
                    $('#exampleModal').modal('show');
                    // Wait for 5 seconds before redirecting
                    setTimeout(function() {
                        window.location.href = '/Index';
                    }, 5000); // 5000 milliseconds = 5 seconds
                </text>
        }
        });
    </script>
}
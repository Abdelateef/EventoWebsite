@page
@model projectf22.Pages.sign_upModel
@{
}
<div class="page-heading-rent-venue">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Join us now!</h2>
                <span>Check out our events, pick your choice and book your ticket.</span>
            </div>
        </div>
    </div>
</div>

<div class="rent-venue-tabs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row" id="tabs">
                    <div class="col-lg-12">
                        <div class="heading-tabs">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="rent-venue-application" >
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="heading-text">
                    <h4>Sign Up</h4>
                </div>
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input  type="text" id="name" placeholder="Your Name*" required="" asp-for="@Model.UsName">
                                    <span asp-validation-for="@Model.UsName" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12 ">
                                <fieldset>
                                    <input  type="text" id="email" placeholder="Your Email*" required="" asp-for="@Model.UsEmail">
                                    <span asp-validation-for="@Model.UsEmail" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input  type="password" id="password" placeholder="Password*" required="" asp-for="@Model.UsPassword">
                                    <span asp-validation-for="@Model.UsPassword" class="text-danger"></span>
                                </fieldset>

                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-dark-button">Create a new account</button>
                                </fieldset>
                            </div>
                        </div>
                    </form> <br />
                    <div class="down-content">
                        <span>Already have an account?</span>
                
                        <div class="main-dark-button">
                            <a href="/Login">Log in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



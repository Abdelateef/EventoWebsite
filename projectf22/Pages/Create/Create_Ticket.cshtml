@page
@model projectf22.Pages.Create.Create_TicketModel
@{
}

<form method="post">
    <input type="number" step="0.01" asp-for="ticket.TicketPrice" placeholder="Ticket Price" />
    <input type="checkbox" asp-for="ticket.Availability" /> Availability

    <label asp-for="ticket.TicketType">Ticket Type</label>
    <select asp-for="ticket.TicketType">
        <option value="VIP">VIP</option>
        <option value="Regular">Regular</option>
    </select>

    <input type="number" asp-for="ticket.EventID" placeholder="Event ID" />
    <br />
    <button class="btn btn-primary" type="submit">Add new Ticket</button>
</form>

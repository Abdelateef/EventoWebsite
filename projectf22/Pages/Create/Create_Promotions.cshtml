@page
@model projectf22.Pages.Create.Create_PromotionsModel
@{
    <form method="post">
        <input type="text" asp-for="promotion.PromotionType" placeholder="Promotion Type" />
        <input type="number" step="0.01" asp-for="promotion.DiscountAmount" placeholder="Discount Amount" />
        <input type="number" asp-for="promotion.UsageLimit" placeholder="Usage Limit" />
        <input type="datetime-local" asp-for="promotion.ExpirationDate" placeholder="Expiration Date" />
        <br />
        <button class="btn btn-primary" type="submit">Add new Promotion</button>
    </form>
}

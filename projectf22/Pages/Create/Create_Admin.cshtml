@page
@model projectf22.Pages.Create.Create_BookingModel
@{
    <form method="post">
        <input type="number" asp-for="booking.UserID" placeholder="User ID" />
        <input type="datetime-local" asp-for="booking.BookingDate" placeholder="Booking Date" />
        <input type="number" asp-for="booking.NumOfTickets" placeholder="Number of Tickets" />
        <input type="number" step="0.01" asp-for="booking.TotalPrice" placeholder="Total Price" />
        <br />
        <button class="btn btn-primary" type="submit">Add new Booking</button>
    </form>
}
